<% include ../partials/header %>


<div class="ui main text container segment">
    <div class="ui huge header"> Edit <%= gym.name %> </div>
    <form class ="ui form" action="/index/<%= gym._id %>?_method=PUT" method ="POST">
        <div class="field">
            <label> Name </label>
             <input type="text" name="gym[name]" value="<%= gym.name %>">
        </div>
        
        <div class="field">
            <label> Phone </label>
            <input type="text" name="gym[phone]" value="<%= gym.phone %>">
        </div>   
        
        <div class="field">
            <label> Street </label>
            <input type="text" name="gym[street]" value="<%= gym.street %>">
        </div>  
        
        <div class="field">
            <label> Area </label>
            <input type="text" name="gym[area]" value="<%= gym.area %>">
        </div> 
        
       <div class="field">
            <label> City </label>
            <input type="text" name="gym[city]" value="<%= gym.city %>">
        </div>   
        
        
       
       
       
        <input class="ui orange big button" type="submit">
        
    </form>
    
</div>



<% include ../partials/footer %>